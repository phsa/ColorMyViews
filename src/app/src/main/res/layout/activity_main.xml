<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_normal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_boxOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_tiny"
        android:text="@string/main_label_boxOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/WhiteBoxStyle"
        />

    <TextView
        android:id="@+id/text_boxTwo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="@string/main_label_boxTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_boxOne"
        style="@style/WhiteBoxStyle"
        />

    <TextView
        android:id="@+id/text_boxThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:text="@string/main_label_boxThree"
        app:layout_constraintStart_toEndOf="@+id/text_boxTwo"
        app:layout_constraintTop_toTopOf="@+id/text_boxTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_boxFour"
        style="@style/WhiteBoxStyle"
        />

    <TextView
        android:id="@+id/text_boxFour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginVertical="@dimen/spacing_normal"
        android:text="@string/main_label_boxFour"
        app:layout_constraintStart_toEndOf="@+id/text_boxTwo"
        app:layout_constraintTop_toBottomOf="@+id/text_boxThree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_boxFive"
        style="@style/WhiteBoxStyle"
        />

    <TextView
        android:id="@+id/text_boxFive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:text="@string/main_label_boxFive"
        app:layout_constraintStart_toEndOf="@+id/text_boxTwo"
        app:layout_constraintTop_toBottomOf="@+id/text_boxFour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/text_boxTwo"
        style="@style/WhiteBoxStyle"
        />

    <TextView
        android:id="@+id/text_howToPlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/main_label_howToPlay"
        android:textSize="@dimen/textSize_medium"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_gameInstructions"
        />

    <TextView
        android:id="@+id/text_gameInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:text="@string/main_info_howToPlay"
        app:layout_constraintStart_toEndOf="@id/text_howToPlay"
        app:layout_constraintTop_toBottomOf="@id/text_boxTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        />

    <Button
        android:id="@+id/button_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_label_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_yellow"
        app:layout_constraintBaseline_toBaselineOf="@id/button_yellow"
        />

    <Button
        android:id="@+id/button_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_normal"
        android:text="@string/main_label_yellow"
        app:layout_constraintStart_toEndOf="@+id/button_red"
        app:layout_constraintTop_toBottomOf="@id/text_gameInstructions"
        app:layout_constraintEnd_toStartOf="@+id/button_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.00"
        />

    <Button
        android:id="@+id/button_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_label_green"
        app:layout_constraintStart_toEndOf="@+id/button_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/button_yellow"
        />

</androidx.constraintlayout.widget.ConstraintLayout>