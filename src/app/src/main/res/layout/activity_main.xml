<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_normal"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/text_howToPlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/main_label_howToPlay"
        android:textSize="@dimen/textSize_medium"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_gameInstructions"
        />

    <TextView
        android:id="@+id/text_gameInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:text="@string/main_info_howToPlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_howToPlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        />

    <TextView
        android:id="@+id/text_boxOne"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_huge"
        android:layout_marginBottom="224dp"
        android:layout_marginHorizontal="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_boxTwo"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginEnd="260dp"
        app:layout_constraintBottom_toTopOf="@+id/text_boxFour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_boxThree"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/spacing_short"
        android:layout_marginStart="@dimen/spacing_normal"
        app:layout_constraintBottom_toTopOf="@id/text_boxFour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_boxOne"
        app:layout_constraintTop_toTopOf="@id/text_boxOne"
        />

    <TextView
        android:id="@+id/text_boxFour"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="452dp"
        android:layout_marginEnd="272dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_boxFive"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_long"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginBottom="384dp"
        app:layout_constraintTop_toBottomOf="@id/text_boxThree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_boxOne"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_boxSix"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="392dp"
        app:layout_constraintTop_toBottomOf="@id/text_boxThree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_boxFive"
        />

    <TextView
        android:id="@+id/text_boxSeven"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="192dp"
        android:layout_marginEnd="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/text_boxFour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_boxOne"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/text_boxEight"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginHorizontal="@dimen/spacing_little"
        app:layout_constraintTop_toBottomOf="@id/text_boxFive"
        app:layout_constraintBottom_toBottomOf="@id/text_boxOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_boxOne"
        />

    <TextView
        android:id="@+id/text_boxNine"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_small"
        app:layout_constraintBottom_toTopOf="@id/text_boxTwelve"
        app:layout_constraintEnd_toStartOf="@id/text_boxTen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_boxSeven"
        />

    <TextView
        android:id="@+id/text_boxTen"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_big"
        android:layout_marginBottom="@dimen/spacing_large"
        app:layout_constraintBottom_toTopOf="@id/text_boxTwelve"
        app:layout_constraintStart_toEndOf="@id/text_boxSeven"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_boxOne"
        />

    <TextView
        android:id="@+id/text_boxEleven"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/text_boxTen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_boxNine"
        app:layout_constraintBottom_toTopOf="@id/text_boxTwelve"
        />

    <TextView
        android:id="@+id/text_boxTwelve"
        style="@style/WhiteBoxStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        />

</androidx.constraintlayout.widget.ConstraintLayout>